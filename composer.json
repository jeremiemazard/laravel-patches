{
    "name": "jeremiemazard/laravel-patches",
    "description": "A package to simplify one-time data-changes in your laravel application",
    "keywords": [
        "jeremiemazard",
        "laravel",
        "laravel-patches"
    ],
    "homepage": "https://github.com/jeremiemazard/laravel-patches",
    "license": "MIT",
    "authors": [
        {
            "name": "Jérémie Mazard",
            "email": "mazardjeremie@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "JeremieMazard\\LaravelPatches\\": "src/",
            "JeremieMazard\\LaravelPatches\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JeremieMazard\\LaravelPatches\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JeremieMazard\\LaravelPatches\\LaravelPatchesServiceProvider"
            ],
            "aliases": {
                "LaravelPatches": "JeremieMazard\\LaravelPatches\\Facades\\LaravelPatches"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
